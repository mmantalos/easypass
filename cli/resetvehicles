import argparse
import requests
import json
import pandas as pd

parser = argparse.ArgumentParser()
parser.add_argument('--format', choices=['json','csv'], help='', required='TRUE')
args = parser.parse_args()

baseurl = 'https://localhost:9103/interoperability/api'
url = baseurl + '/admin/resetvehicles'
#print(url)

res = requests.post(url)
res = res.json()

if(args.format == 'csv'):
    df = pd.DataFrame(res['status'])
    df.to_csv('resetstations.csv', index=None, sep=';')
    print(df)
else:
    print(json.dumps(res, indent=4))
