import argparse
import requests
import json
import pandas as pd

parser  = argparse.ArgumentParser(prog = "passescost",
                                 description = "Get the total cost and number of passes of vehicles with the specified tag and station providers")
#define command arguments
parser.add_argument("--op1", required = True)
parser.add_argument("--op2", required = True)
parser.add_argument("--datefrom", required = True)
parser.add_argument("--dateto", required = True)
parser.add_argument("--format", choices = ["json", "csv"], required = True)
#parse command line input
args = parser.parse_args()

#for now doesn't verify SSL ->fix https
res = requests.get(f"http://localhost:9103/interoperability/api/PassesCost/{args.op1}/{args.op2}/{args.datefrom}/{args.dateto}?format={args.format}", verify = False)
res = res.json()
if(args.format == 'csv'): #is this the correct format?
    df = pd.DataFrame(res['passesCost'])
    df.to_csv('passesCost.csv', index=None, sep=';')
    print(df)
else:
    print(json.dumps(res, indent=4))
